    "lodash": "^4.17.11",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.1.0",
    "react-slick": "^0.23.2",
    "react-stonecutter": "^0.3.9",
    "react-universal-component": "^3.0.3",
    "redux": "^4.0.1",
